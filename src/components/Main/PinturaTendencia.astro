<script>
    var elementos: NodeListOf<Element> = document.querySelectorAll('.Carrusel div');
    function ActivarElemento(index:number): void{
        for(let i=0 ; elementos.length-1 ; i++){
            elementos[i].setAttribute('class','');
            if(index===i){
                elementos[i].setAttribute('class','Activo');
            }
        }
    }
    elementos.forEach((elemento,index) => (
        elemento.addEventListener('click',()=>{
            if(!elemento.classList.contains('Activo')){
                ActivarElemento(index);
                return
            }
            console.log('CAMBIAR A PAGINA')
        })
    )) 
</script>