<div class="barraNavegacion">
    <a class="logo" href="/">
        <h2>PAINTSHOP</h2>
        <span>- SINCE 1995 -</span>
    </a>
	<div class="MenuHamburguesa">
		<svg xmlns="http://www.w3.org/2000/svg" width="68" height="68" viewBox="0 0 68 68" fill="none">
			<path d="M11.3333 17H56.6666V22.6667H11.3333V17ZM11.3333 31.1667H56.6666V36.8333H11.3333V31.1667ZM11.3333 45.3333H56.6666V51H11.3333V45.3333Z" fill="#F7F7F7"/>
		</svg>
	</div>
    <nav>
		<ul>
			<li><a href="/colores">Colores</a></li>
			<li><a href="/pintores">Pintores</a></li>
			<li><a href="/inspirate">Inspirate</a></li>
			<li><a href="/nosotros">Nosotros</a></li>
			<li><a href="/contactanos">Contactanos</a></li>
		</ul>
    </nav>
</div>
<style>
    .logo{
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: start;
	}
	.logo h2{
		color: #F7F7F7;
		text-align: center;
		font-size: 40px;
		font-style: normal;
		font-weight: 800;
		line-height: normal;
		padding: 0;
		margin: 0;
	}
	.logo span{
		color: #F7F7F7;
		font-size: 20px;
		font-weight: 300;
		text-align: center;
		font-style: normal;
		line-height: normal;
		margin: auto;
	}
	.MenuHamburguesa{
		display: none;
	}
	@media(max-width: 480px){
		.MenuHamburguesa{
			display: block;
		}
	}
	.barraNavegacion{
		max-width: 1236px;
		width: 95%;
		background-color: transparent;
		display: flex;
		margin: 0 auto;
        padding-top: 50px;
        padding-bottom: 20px;
		align-items: center;
		justify-content: space-between;
		flex-wrap: wrap;
	}
	.barraNavegacion nav ul li{
		text-align: center;			
		font-size: 16px;
		font-style: normal;
		font-weight: 300;
		line-height: normal;
		list-style: none;
	}
	.barraNavegacion a {
		color: #F7F7F7;
		text-decoration: none;
	}
	.barraNavegacion nav ul{
		display: flex;
		max-width: 608px;
		max-height: 19px;
		justify-content: center;
		align-items: center;
		gap: 26px;
		flex-shrink: 0;
	}
	@media (max-width: 480px) {
		.barraNavegacion nav{
			width: 100%;
			margin-top: 30px;
			display: none;
			animation: OcultarBarra 1s;
		}
		@keyframes OcultarBarra {
			from {
				display: block;
				opacity: 1;
				width: 100%;
			}
			to {
				display: none;
				opacity: 0;
				width: 30%;
			}
    	}
		.barraNavegacion nav.Activo{
			display: block;
			animation: MostrarBarra 1s;
		}
		@keyframes MostrarBarra {
			from {
				opacity: 0;
				width: 30%;
			}
			to {
				opacity: 1;
				width: 100%;
			}
    	}
		.barraNavegacion nav ul{ 
			display: flex;
			max-width: 430px;
			max-height: 205px;
			flex-direction: column;
			justify-content: center;
			align-items: center;
			gap: 26px;
			flex-shrink: 0;
		}
	}
	nav a{
		position: relative;
		padding-bottom: 10px;
	}
	nav a::before{
		content: "";
		width: 100%;
		height: 2px;
		position: absolute;
		left: 0;
		bottom: 0;
		background: #F7F7F7;
		transition: 0.5s transform ease;
		transform: scale3d(0,1,1);
		transform-origin: 0 50%;
	}
	nav a:hover::before{
		transform: scale3d(1,1,1);
		transform-origin: 100% 50%;
	}
</style>
<script>
	let MenuHamburguesa = document.querySelector('.MenuHamburguesa');
	MenuHamburguesa?.addEventListener('click',()=>{
		var Navegacion = document.querySelector('nav');
		if(!Navegacion?.classList.contains('Activo'))
		{
			Navegacion?.classList.add("Activo");
		}else{
			Navegacion?.classList.remove("Activo");
		}
	})
</script>