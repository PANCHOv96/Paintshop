---
import Layout from '../layouts/Layout.astro';
import BarraNavegacionMain from '../components/BarraNavegacionMain.astro';
import ContenedorImagen from '../components/Main/ContenedorImagen.astro';
import PinturaTendencia from "../components/Main/PinturaTendencia.astro";
import Inspirate from "../components/Main/Inspirate.astro";
import ServiciosAsesoramiento from "../components/Main/ServiciosAsesoramiento.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Bienvenido a PAINTSHOP">
	<div class="ImagenPrincipal">
		<BarraNavegacionMain/>
		<div class="MensajeBienvenida">
			<h2>CONVIERTE TU VISION CREATIVA EN REALIDAD</h2>
			<div>
				<a class='BotonVerPinturas' href="#">VER PINTURAS</a>
			</div>
		</div>
	</div>
	<ContenedorImagen/>
	<PinturaTendencia/>
	<Inspirate/>
	<ServiciosAsesoramiento/>
	<Footer/>  
</Layout>

<style>
	.ImagenPrincipal{
		max-width: 100dvw;
		height: 100dvh;
		background: url('Imagen/2.jpg'); 
		object-fit: cover;
		background-repeat: no-repeat;
		background-size: cover;
		background-position: center;
		flex-shrink: 0;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}
	.MensajeBienvenida{
		max-width: 1236px;
		width: 95%;
		height: 50%;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		justify-content: center;
	}
	.MensajeBienvenida h2{
		color: #F7F7F7;
		display: flex;
		max-width: 425px;
		max-height: 169px;
		flex-direction: column;
		justify-content: flex-end;
		flex-shrink: 0;
		font-size: 48px;
		font-style: normal;
		font-weight: 700;
		line-height: normal;
	}
	@media (max-width: 480px){
		.MensajeBienvenida h2{
			max-width: 355px;
			max-height: 125px;
			font-size: 36px;
		}
	}
	.BotonVerPinturas{
		/* background-color: #D9D9D9 ;  */
		background-image: linear-gradient(to right ,#1D1414 50%, #D9D9D9 50%);
		background-size: 250%;
		background-repeat: no-repeat;
		background-position: right;
		color: black;
		font-size: 16px;
		font-style: normal;
		font-weight: 300;
		line-height: normal;
		border-radius: 50px;
		flex-shrink: 0;
		max-width: 165px;
		max-height: 39px;
		padding: 10px 28px;
		text-decoration: none;
		transition: all ease-in-out 1s;
	}
	.BotonVerPinturas:hover{
		background-position: left;
		box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
		border:1px solid rgba(217,217,217,0.2) /* es el #D9D9D9 */;
		color: #D9D9D9;
		transition: all ease-in-out 1s;
	}
	@media (max-width: 480px){
		.MensajeBienvenida div{
			text-align: center;
		}
	}
</style>
